  const defaults = {
    org:{name:"Asaas National School",url:"https://asaas.example",logo:"",socials:["https://facebook.com/", "https://instagram.com/"]},
    campuses:[
      {id:crypto.randomUUID(),name:"Cantt Campus",phone:"+923001234567",whatsApp:"+923001234567",address:"Cantt, Gujranwala",timings:"Mon–Sat, 8:00–2:00",map:"https://www.google.com/maps?q=Gujranwala+Cantt&output=embed"},
      {id:crypto.randomUUID(),name:"Ghakkhar Campus",phone:"+923111234567",whatsApp:"+923111234567",address:"Ghakhar Mandi, Gujranwala",timings:"Mon–Sat, 8:00–2:00",map:"https://www.google.com/maps?q=Ghakkhar+Mandi&output=embed"},
      {id:crypto.randomUUID(),name:"Satellite Town",phone:"+923211234567",whatsApp:"+923211234567",address:"Satellite Town, Gujranwala",timings:"Mon–Sat, 8:00–2:00",map:"https://www.google.com/maps?q=Satellite+Town+Gujranwala&output=embed"}
    ],
    gallery:[
      "https://images.unsplash.com/photo-1606326608691-31e3d1bd7b1e?auto=format&fit=crop&w=900&q=60",
      "https://images.unsplash.com/photo-1588072432836-e10032774350?auto=format&fit=crop&w=900&q=60",
      "https://images.unsplash.com/photo-1556905055-8f358a7a47b2?auto=format&fit=crop&w=900&q=60"
    ],
    news:["Admissions open for 2025–26.","PTM scheduled next Friday (11:00 AM)."],
    dates:["Every Saturday – Assessments (10:00 AM)"]
  }

  const $ = (s, r=document)=> r.querySelector(s); const $$=(s,r=document)=>[...r.querySelectorAll(s)];
  const state = JSON.parse(localStorage.getItem('asaas-site')||'null') || defaults;
  let currentLang='en'; let activeCampusIndex=0;

  function save(){localStorage.setItem('asaas-site', JSON.stringify(state)); renderAll();}

  /* --- Lang & mobile menu --- */
  function setLang(lang){ currentLang=lang; document.body.classList.toggle('rtl', lang==='ur');
    $$('#lang-en, #lang-ur').forEach(b=>b.classList.remove('active')); $(`#lang-${lang}`).classList.add('active');
    $$('#lang-en, #lang-ur').forEach(b=>b.setAttribute('aria-pressed','false')); $(`#lang-${lang}`).setAttribute('aria-pressed','true');
    $$('[data-i18n]').forEach(el=>{ const k=el.getAttribute('data-i18n'); el.textContent = (i18n[lang][k]||el.textContent); });
  }
  $('#lang-en').onclick=()=>setLang('en'); $('#lang-ur').onclick=()=>setLang('ur');
  const nav=$('#top-nav'); const mp=$('#mobile-panel'); const mt=$('#menu-toggle');
  mt.addEventListener('click',()=>{ const open=!nav.classList.contains('open'); nav.classList.toggle('open', open); mp.hidden=!open; mt.setAttribute('aria-expanded', String(open)); });
  mp.addEventListener('click', (e)=>{ if(e.target.matches('a')){nav.classList.remove('open'); mp.hidden=true; mt.setAttribute('aria-expanded','false');} });

  /* --- Forms -> WhatsApp --- */
  $('#lead-form').addEventListener('submit', (e)=>{
    e.preventDefault(); const fd=new FormData(e.target);
    const campusName = fd.get('campus'); const campus=state.campuses.find(c=>c.name===campusName) || state.campuses[0];
    const msg = `Admission Inquiry\nParent: ${fd.get('parent')}\nChild: ${fd.get('child')}\nGrade: ${fd.get('grade')}\nCampus: ${campusName}\nPhone: ${fd.get('phone')}`;
    const url = `https://wa.me/${encodeURIComponent((campus.whatsApp||campus.phone).replace(/[^+0-9]/g,''))}?text=${encodeURIComponent(msg)}`;
    window.open(url,'_blank');
  });
  $('#jobs-form').addEventListener('submit', (e)=>{
    e.preventDefault(); const fd=new FormData(e.target); const c=state.campuses[0];
    const msg = `Job Application\nName: ${fd.get('name')}\nRole: ${fd.get('role')}\nPhone: ${fd.get('phone')}\nMessage: ${fd.get('message')}`;
    const url = `https://wa.me/${encodeURIComponent((c.whatsApp||c.phone).replace(/[^+0-9]/g,''))}?text=${encodeURIComponent(msg)}`;
    window.open(url,'_blank');
  });

  /* --- Accordion --- */
  $('#fee-accordion').addEventListener('click', (e)=>{
    const item=e.target.closest('.item'); if(!item)return; const a=item.querySelector('.a'); a.style.display = a.style.display==='block'?'none':'block';
  });

  /* --- Campuses --- */
  function renderCampuses(){
    const tabs=$('#camp-tabs'); tabs.innerHTML='';
    state.campuses.forEach((c,idx)=>{
      const b=document.createElement('button'); b.textContent=c.name; b.className=idx===activeCampusIndex?'active':''; b.style.minHeight='44px';
      b.onclick=()=>{activeCampusIndex=idx; renderCampuses();}; tabs.appendChild(b);
    });
    const c=state.campuses[activeCampusIndex]||state.campuses[0];
    const wrap=$('#camp-content');
    wrap.innerHTML=`
      <div class="grid-2">
        <div class="card pad">
          <h3>${c.name}</h3>
          <p><strong>Address:</strong> ${c.address||'-'}</p>
          <p><strong>Timings:</strong> ${c.timings||'-'}</p>
          <p><strong>Phone:</strong> <a href="tel:${(c.phone||'').replace(/[^+0-9]/g,'')}">${c.phone||'-'}</a></p>
          <div style="display:flex;gap:.6rem;flex-wrap:wrap;margin-top:.6rem;width:100%">
            <a class="btn" style="flex:1" target="_blank" href="https://wa.me/${(c.whatsApp||c.phone).replace(/[^+0-9]/g,'')}">💬 WhatsApp</a>
            <a class="btn secondary" style="flex:1" href="#admissions">Apply to ${c.name}</a>
          </div>
        </div>
        <div class="map card"><iframe src="${c.map||''}" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
      </div>`;
    const cc=$('#contact-cards'); cc.innerHTML='';
    state.campuses.forEach((x)=>{
      const card=document.createElement('div'); card.className='card pad';
      card.innerHTML=`<h3>${x.name}</h3><p>${x.address}</p><p>${x.timings}</p><p><a href="tel:${(x.phone||'').replace(/[^+0-9]/g,'')}">${x.phone}</a></p><div style="display:flex;gap:.5rem"><a class="btn" style="flex:1" target="_blank" href="https://wa.me/${(x.whatsApp||x.phone).replace(/[^+0-9]/g,'')}">WhatsApp</a><a class="btn secondary" style="flex:1" href="#admissions">Apply</a></div>`;
      cc.appendChild(card);
    });
    const wa=`https://wa.me/${(c.whatsApp||c.phone).replace(/[^+0-9]/g,'')}`; $('#wa-fab').href=wa;
  }

  /* --- Gallery --- */
  function renderGallery(){
    const g=$('#gallery'); g.innerHTML='';
    (state.gallery||[]).forEach(src=>{
      const img=new Image(); img.src=src; img.alt='photo'; img.loading='lazy'; img.decoding='async'; img.onclick=()=>openLightbox(src); g.appendChild(img);
    })
  }
  function openLightbox(src){ const lb=$('#lightbox'); lb.style.display='flex'; lb.querySelector('img').src=src; lb.onclick=()=>lb.style.display='none'; }

  /* --- News & Dates --- */
  function renderNews(){
    const n=$('#news-list'); n.innerHTML='';
    (state.news||[]).forEach(text=>{ const card=document.createElement('div'); card.className='card pad'; card.textContent=text; n.appendChild(card); });
    const dl=$('#dates-list'); dl.innerHTML=''; (state.dates||[]).forEach(d=>{const li=document.createElement('li'); li.textContent=d; dl.appendChild(li);})
  }

  /* --- Admin panel --- */
  const admin=$('#admin'); const openAdmin=()=>{ const ok=prompt('Enter admin PIN',''); if(ok==='1234'){admin.style.display='flex'; loadAdminFields();} else if(ok!==null){ alert('Wrong PIN'); } }
  $('#admin-open').onclick=openAdmin; $('#admin-open-2').onclick=openAdmin; $('#admin-close').onclick=()=>admin.style.display='none';

  function loadAdminFields(){
    $('#org-name').value=state.org.name||''; $('#org-url').value=state.org.url||''; $('#org-logo').value=state.org.logo||''; $('#org-socials').value=(state.org.socials||[]).join(', ');
    const host=$('#camp-admin'); host.innerHTML='';
    state.campuses.forEach((c,idx)=>{
      const wrap=document.createElement('div'); wrap.className='card pad'; wrap.style.marginTop='.6rem';
      wrap.innerHTML=`
        <h4 style="margin-top:0">Campus ${idx+1}</h4>
        <label>Name</label><input data-k="name" data-i="${idx}" value="${c.name||''}"/>
        <label>Phone</label><input data-k="phone" data-i="${idx}" value="${c.phone||''}"/>
        <label>WhatsApp (with country code)</label><input data-k="whatsApp" data-i="${idx}" value="${c.whatsApp||''}"/>
        <label>Address</label><input data-k="address" data-i="${idx}" value="${c.address||''}"/>
        <label>Timings</label><input data-k="timings" data-i="${idx}" value="${c.timings||''}"/>
        <label>Google Map Embed URL (…&output=embed)</label><input data-k="map" data-i="${idx}" value="${c.map||''}"/>
        <div style="margin-top:.5rem"><button class="btn secondary" data-del="${idx}">Delete</button></div>`;
      host.appendChild(wrap);
    });
    $('#gallery-urls').value=(state.gallery||[]).join(', ');
    $('#news-items').value=(state.news||[]).join('\n');
    $('#dates-items').value=(state.dates||[]).join('\n');
    host.querySelectorAll('[data-del]').forEach(btn=>btn.onclick=()=>{ const i=+btn.getAttribute('data-del'); state.campuses.splice(i,1); save(); loadAdminFields(); });
  }

  $('#add-campus').onclick=()=>{ state.campuses.push({id:crypto.randomUUID(),name:"New Campus",phone:"+92",whatsApp:"+92",address:"",timings:"Mon–Sat",map:""}); save(); };
  $('#save-admin').onclick=()=>{
    state.org.name=$('#org-name').value.trim(); state.org.url=$('#org-url').value.trim(); state.org.logo=$('#org-logo').value.trim(); state.org.socials=$('#org-socials').value.split(',').map(s=>s.trim()).filter(Boolean);
    $$('#camp-admin [data-k]').forEach(inp=>{ const i=+inp.getAttribute('data-i'); const k=inp.getAttribute('data-k'); state.campuses[i][k]=inp.value; });
    state.gallery=$('#gallery-urls').value.split(',').map(s=>s.trim()).filter(Boolean);
    state.news=$('#news-items').value.split('\n').map(s=>s.trim()).filter(Boolean);
    state.dates=$('#dates-items').value.split('\n').map(s=>s.trim()).filter(Boolean);
    save(); admin.style.display='none';
  }
  $('#reset-admin').onclick=()=>{ if(confirm('Reset site to defaults?')){ localStorage.removeItem('asaas-site'); location.reload(); } }

  $('#add-news').onclick=()=>openAdmin(); $('#add-date').onclick=()=>openAdmin(); $('#add-gallery').onclick=()=>openAdmin();

  function renderLeadCampus(){ const sel=$('#lead-campus'); sel.innerHTML=''; state.campuses.forEach(c=>{ const o=document.createElement('option'); o.value=c.name; o.textContent=c.name; sel.appendChild(o); }); }

  function updateSchema(){
    const schema={
      "@context":"https://schema.org",
      "@type":"Organization",
      "name":state.org.name,
      "url":state.org.url,
      "logo":state.org.logo,
      "sameAs":state.org.socials||[],
      "department": state.campuses.map(c=>({
        "@type":"School",
        "name": `${state.org.name} – ${c.name}`,
        "address": c.address,
        "telephone": c.phone
      }))
    };
    $('#schema-json').textContent=JSON.stringify(schema,null,2);
  }

  function renderAll(){ setLang(currentLang); renderLeadCampus(); renderCampuses(); renderGallery(); renderNews(); updateSchema(); $('#year').textContent=new Date().getFullYear(); }
  renderAll();

  document.addEventListener('click', (e)=>{ const a=e.target.closest('a[href^="#"]'); if(!a) return; const id=a.getAttribute('href').slice(1); const el=document.getElementById(id); if(!el) return; e.preventDefault(); el.scrollIntoView({behavior:'smooth',block:'start'}); });

  /* --- Self-tests (basic + mobile, extended) --- */
  (function runTests(){
    const results=[]; const pass=(n,ok)=>results.push({name:n,ok});
    try{ const el=$('#lead-form'); pass('lead form exists', !!el); }catch{ pass('lead form exists', false); }
    try{ const before=document.body.classList.contains('rtl'); setLang('ur'); const after=document.body.classList.contains('rtl'); setLang('en'); pass('lang toggle sets RTL', !before && after); }catch{ pass('lang toggle sets RTL', false); }
    try{ const sel=$('#lead-campus'); const n=sel.options.length; pass('campus options populated', n>0); }catch{ pass('campus options populated', false); }
    try{ updateSchema(); const json=$('#schema-json').textContent; const parsed=JSON.parse(json); pass('schema JSON valid', !!parsed && Array.isArray(parsed.department)); }catch(e){ pass('schema JSON valid', false); console.error('Schema JSON invalid', e); }
    try{ const mt=document.getElementById('menu-toggle'); mt.click(); const open=document.getElementById('mobile-panel').hidden===false; mt.click(); pass('mobile menu toggles', open===true); }catch{ pass('mobile menu toggles', false); }
    try{ const href=document.getElementById('wa-fab').getAttribute('href'); pass('WhatsApp FAB has link', /^https:\/\/wa\.me\//.test(href)); }catch{ pass('WhatsApp FAB has link', false); }
    try{ const json=$('#schema-json').textContent; const parsed=JSON.parse(json); pass('schema departments match campuses', parsed.department.length===state.campuses.length); }catch{ pass('schema departments match campuses', false); }
    console.table(results);
  })();
  </script>
</body>
